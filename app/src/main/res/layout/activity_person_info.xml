<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb90f">


    <!--ActionBar-->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#E43F3F"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_login"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:src="@drawable/base_action_bar_back_normal"/>
        <ImageView
            android:id="@+id/seperator"
            android:layout_width="1.0dp"
            android:layout_height="40dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@+id/back_login"
            android:background="#FFB90F"
            />

        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text='办理住宿'
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />

    </RelativeLayout>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="@drawable/radius_drawable_bg"
        android:padding="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="30dp">

        <TableRow>
            <TextView
                android:text="姓名"
                android:textColor="#FF9F9D9D"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/pstu_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="姓名"
                android:layout_weight="3"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp"
                />

        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:background="#FFB90F"
            />

        <TableRow>
            <TextView
                android:text="学号"
                android:textColor="#FF9F9D9D"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/pstu_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="学号"
                android:layout_weight="3"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp" />

        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:background="#FFB90F"
            />

        <TableRow>
            <TextView
                android:text="性别"
                android:textColor="#FF9F9D9D"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/pstu_gender"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="性别"
                android:layout_weight="3"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp"
                />

        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:background="#FFB90F"
            />

        <TableRow>
            <TextView
                android:text="校验码"
                android:textColor="#FF9F9D9D"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/pstu_veriCode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="校验码"
                android:layout_weight="3"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp"
                />

        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:background="#FFB90F"
            />
        <TableRow>
            <TextView
                android:text="年级"
                android:textColor="#FF9F9D9D"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/pstu_grade"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="年级"
                android:layout_weight="3"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp" />

        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:background="#FFB90F"
            />
        <TableRow>
            <TextView
                android:text="校区"
                android:textColor="#FF9F9D9D"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/pstu_loc"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="校区"
                android:layout_weight="3"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp" />
        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:background="#FFB90F"
            />
        <TableRow>
            <TextView
                android:text="楼号"
                android:textColor="#FF9F9D9D"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/pstu_buliding"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="楼号"
                android:layout_weight="3"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp" />

        </TableRow>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginTop="2.0dp"
            android:background="#FFB90F"
            />
        <TableRow>
            <TextView
                android:text="宿舍号"
                android:textColor="#FF9F9D9D"
                android:layout_weight="1"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/pstu_room"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="宿舍号"
                android:layout_weight="3"
                android:textColor="#FF9F9D9D"
                android:textSize="16sp" />

        </TableRow>

    </TableLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_action"
        android:layout_below="@id/table"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_centerInParent="true"
        android:padding="12dp"
        android:text="办理住宿"/>

</RelativeLayout>