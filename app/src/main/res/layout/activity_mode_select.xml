<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.pku.ss.zhuwc.dormitoryselect.ModeSelect"
    android:background="#ffb90f">
    <RelativeLayout
        android:id="@+id/title_mode"
        android:layout_width="match_parent"
        android:layout_height="45.0dp"
        android:background="#E43F3F"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:src="@drawable/base_action_bar_back_normal"/>
        <ImageView
            android:id="@+id/seperators"
            android:layout_width="1.0dp"
            android:layout_height="40dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@+id/btn_back"
            android:background="#FFB90F"
            />

        <TextView
            android:id="@+id/title_mode_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/seperators"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text='办理住宿'
            android:textColor="#ffffffff"
            android:textSize="22.0sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/title_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40.0dp"
            android:text="  单人办理"
            android:textSize="18sp"
            android:gravity="center_vertical|left"
            android:background="@drawable/text_bg"
            android:id="@+id/signle_mode"
            android:clickable="true"
            android:maxLines="1"
            android:focusable="true"
            android:textColor="#000000"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40.0dp"
            android:text="  两人办理"
            android:textSize="18sp"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:background="@drawable/text_bg"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/double_mode"
            android:textColor="#000000"
            android:layout_below="@id/signle_mode"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40.0dp"
            android:text="  三人办理"
            android:textSize="18sp"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:background="@drawable/text_bg"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/trible_mode"
            android:textColor="#000000"
            android:layout_below="@id/double_mode"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40.0dp"
            android:text="  四人办理"
            android:textSize="18sp"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:background="@drawable/text_bg"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/four_mode"
            android:textColor="#000000"
            android:layout_below="@id/trible_mode"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"/>
    </RelativeLayout>
</RelativeLayout>
